generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  role        String   @default("admin")
  phone       String?
  createdAt   DateTime @default(now())
}

model Agent {
  id       String @id @default(uuid())
  userId   String @unique
  bio      String?
  phone    String?
  photoUrl String?
}

model Project {
  id             String   @id @default(uuid())
  name           String
  slug           String   @unique
  description    String?
  status         String
  images         Json?
  location       String?
  completionDate DateTime?
  createdAt      DateTime @default(now())
}

model Listing {
  id         String   @id @default(uuid())
  title      String
  slug       String   @unique
  price      Int
  areaSqft   Int
  bedrooms   Int
  bathrooms  Int
  type       String
  status     String
  projectId  String?
  address    Json
  lat        Float?
  lng        Float?
  amenities  Json?
  images     Json?
  description String?
  createdAt  DateTime @default(now())
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  message   String?
  listingId String?
  status    String   @default("new")
  createdAt DateTime @default(now())
}
